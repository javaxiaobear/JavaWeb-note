<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>RequestViewsServlet</servlet-name>
        <servlet-class>com.xiaobear.servlet.RequestViewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestViewsServlet</servlet-name>
        <url-pattern>/requestViewsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendRedirectServlet</servlet-name>
        <servlet-class>com.xiaobear.servlet.SendRedirectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendRedirectServlet</servlet-name>
        <url-pattern>/sendRedirectServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResponseSetHeader</servlet-name>
        <servlet-class>com.xiaobear.servlet.ResponseSetHeader</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseSetHeader</servlet-name>
        <url-pattern>/responseSetHeader</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RequestApiServlet</servlet-name>
        <servlet-class>com.xiaobear.servlet.RequestApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestApiServlet</servlet-name>
        <url-pattern>/requestApiServlet</url-pattern>
    </servlet-mapping>

</web-app>